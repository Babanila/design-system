{
  "extends": "../../tsconfig.json",
  "exclude": [
    "dist",
    "../../node_modules",
    "src/scripts",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.stories.tsx"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "dist/cjs",
    "skipLibCheck": true,
    "declaration": false,
    "declarationMap": false,
    "moduleResolution": "node"
  }
}
